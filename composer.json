{
    "name": "liwenyu/phpmailer",
    "description": "将 PHPMailer 封装成 Yii2 邮件发送组件，支持使用 Yii::$app->mail->send() 方式发送邮件",
    "type": "library",
    "keywords": [
        "yii2",
        "phpmailer",
        "mail",
        "email",
        "smtp",
        "graph-api"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "liwenyu",
            "email": "liwenyu66@126.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "yiisoft/yii2": ">=2.0.0",
        "phpmailer/phpmailer": "^6.0",
        "guzzlehttp/guzzle": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "liwenyu\\phpmailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "liwenyu\\phpmailer\\tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
